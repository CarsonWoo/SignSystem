<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@+id/title_find_back_password"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="找回密码"
        android:textSize="50dp"
        android:textColor="#000000"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginTop="100dp"/>

    <TextView
        android:id="@+id/authencation_job_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="工号:"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintTop_toBottomOf="@id/title_find_back_password"
        app:layout_constraintLeft_toLeftOf="parent"
        android:layout_marginTop="100dp"
        android:layout_marginLeft="30dp"/>

    <EditText
        android:id="@+id/authencation_job_number_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="number"
        app:layout_constraintBottom_toBottomOf="@id/authencation_job_number"
        app:layout_constraintLeft_toRightOf="@id/authencation_job_number"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"/>

    <TextView
        android:id="@+id/authencation_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="姓名:"
        android:textSize="20dp"
        android:textColor="#000000"
        app:layout_constraintLeft_toLeftOf="@id/authencation_job_number"
        app:layout_constraintTop_toBottomOf="@id/authencation_job_number"
        android:layout_marginTop="30dp"
        />

    <EditText
        android:id="@+id/authencation_name_input"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="text"
        app:layout_constraintLeft_toLeftOf="@id/authencation_job_number_input"
        app:layout_constraintBottom_toBottomOf="@id/authencation_name"
        app:layout_constraintRight_toRightOf="@id/authencation_job_number_input"
        />

    <Button
        android:id="@+id/authencation_submit"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:text="提交验证"
        android:textColor="#ffffff"
        android:background="#007FFF"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginBottom="50dp"/>

</android.support.constraint.ConstraintLayout>
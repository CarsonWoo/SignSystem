<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <!--<View-->
        <!--android:id="@+id/signing_view_item_top"-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--app:layout_constraintTop_toTopOf="parent"-->
        <!--android:background="#C0C0C0"-->
        <!--android:textAlignment="center"-->

    <TextView
        android:id="@+id/signing_view_item_top_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingTop="10dp"
        android:paddingBottom="10dp"
        android:textAlignment="center"
        android:background="#C0C0C0"
        />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/signing_view_item_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@id/signing_view_item_top_text"
        android:paddingTop="10dp"
        android:paddingBottom="50dp"
        >


        <TextView
        android:id="@+id/signing_item_place"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="签到地点:"
        android:textColor="#000000"
        android:textSize="20dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginLeft="20dp"
        />

        <TextView
            android:id="@+id/signing_item_place_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textSize="20dp"
            app:layout_constraintLeft_toRightOf="@id/signing_item_place"
            app:layout_constraintTop_toTopOf="@id/signing_item_place"
            android:layout_marginLeft="20dp"
            />

        <TextView
            android:id="@+id/signing_item_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到时间:"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="@id/signing_item_place"
            app:layout_constraintTop_toBottomOf="@id/signing_item_place"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/signing_item_time_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="@id/signing_item_place_name"
            app:layout_constraintTop_toTopOf="@id/signing_item_time"
            />

        <TextView
            android:id="@+id/signing_item_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到日期:"
            android:textColor="#000000"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="@id/signing_item_place"
            app:layout_constraintTop_toBottomOf="@id/signing_item_time"
            android:layout_marginTop="20dp"
            />

        <TextView
            android:id="@+id/signing_item_date_range"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="XXX"
            android:textSize="20dp"
            app:layout_constraintLeft_toLeftOf="@id/signing_item_time_range"
            app:layout_constraintTop_toTopOf="@id/signing_item_date"
            />
        <TextView
            android:id="@+id/limit_word"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="（仅限工作日）"
            android:textSize="20dp"
            app:layout_constraintTop_toBottomOf="@id/signing_item_date_range"
            app:layout_constraintLeft_toLeftOf="@id/signing_item_date_range"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="签到部门：市场部，研发部，人事部"
            android:textSize="20dp"
            android:textColor="#000000"
            app:layout_constraintLeft_toLeftOf="@id/signing_item_place"
            app:layout_constraintTop_toBottomOf="@id/limit_word"
            android:layout_marginTop="20dp"/>
    </android.support.constraint.ConstraintLayout>



</android.support.constraint.ConstraintLayout>
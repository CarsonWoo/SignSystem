<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_activity_verify"
    android:clipToPadding="false"
    tools:context="com.carson.signsystem.home.view.VerifyActivity">

    <ImageView
        android:id="@+id/iv_staff"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/icon_staff_verify"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_staff"
        android:layout_marginTop="90dp"
        />

    <TextView
        android:id="@+id/tv_staff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_staff"
        android:textColor="@color/colorDark"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@id/iv_staff"
        app:layout_constraintBottom_toBottomOf="@id/iv_staff"
        app:layout_constraintStart_toEndOf="@id/iv_staff"
        app:layout_constraintEnd_toEndOf="parent"
        />

    <ImageView
        android:id="@+id/iv_manager"
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:src="@drawable/icon_manager_verify"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_manager"
        android:layout_marginBottom="90dp"
        />

    <TextView
        android:id="@+id/tv_manager"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/verify_manager"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="30dp"
        app:layout_constraintTop_toTopOf="@id/iv_manager"
        app:layout_constraintBottom_toBottomOf="@id/iv_manager"
        app:layout_constraintStart_toEndOf="@id/iv_manager"
        app:layout_constraintEnd_toEndOf="parent"
        />

</android.support.constraint.ConstraintLayout>
